.modal-box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: 99999;
}

.modal-body {
  position: relative;
  top: 20%;
  left: 13%;
  width: 550rpx;
  height: 560rpx;
}

.modal-content {
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.modal-content .title {
  font-size: 32rpx;
  color: #454545;
}

.modal-content .logo {
  width: 136rpx;
  height: 136rpx;
  margin: 56rpx auto 36rpx auto;
}

.modal-content .info, .modal-content .bind {
  font-size: 24rpx;
}

.modal-content .bind {
  margin: 46rpx auto 24rpx auto;
  width: 300rpx;
  height: 70rpx;
  border-radius: 8rpx;
  background: #fcc800;
  color: #333;
  display: flex;
  align-items: center;
  padding-left: 146rpx;
}

.modal-content .cancel {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}